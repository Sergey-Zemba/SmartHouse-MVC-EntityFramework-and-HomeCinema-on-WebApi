@using SmartHouseMVC.Helpers
@model SmartHouseMVC.Models.SmartHouse.Devices.HomeCinema
<div class="item homeCinema" id="@Model.Position">
    <input type="hidden" class="hidden" value="@Model.Id" />
    @DeleteHelper.CreateControl(Html, Model)
    <div class="indicators">
        @VolumeableHelper.CreateIndicator(Html, Model)
        @RecordingHelper.CreateIndicator(Html, Model)
        @BassHelper.CreateIndicator(Html, Model)
        @ThreeDimensionalHelper.CreateIndicator(Html, Model)
    </div>
    <div class="controls">
        @SwitchableHelper.CreateControl(Html, Model)
        @VolumeableHelper.CreateControl(Html, Model)
        @RecordingHelper.CreateControl(Html, Model)
        @BassHelper.CreateControl(Html, Model)
        @ThreeDimensionalHelper.CreateControl(Html, Model)
    </div>
</div>
